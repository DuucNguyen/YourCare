@page
@model             DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>
<h3>Are you sure you want to delete this?</h3>
<h4>Specialization</h4>
<hr />
<div class="row d-flex justify-content-between">
    <div class="col-md-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3 form-group d-flex justify-content-between ">
            <div style="width: 150px; height: 150px; border: 1px solid #ddd; padding: 2px; border-radius: 10px;">
                <img id="previewImage" style="width: 100%" src="@Model.Input.ImageString" alt="image" />
            </div>
            <div>
                <label asp-for="Input.Name" class="control-label"></label>
                <input readonly asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        </div>
        <form method="post">
            <input type="hidden" asp-for="Input.Id" />

            <div class="d-flex">
                <input type="submit" class="btn btn-danger me-3" value="Delete" />
                <a class="btn btn-primary" asp-page="Index">Back to list</a>
            </div>
        </form>
    </div>

    <div class="col-md-5">
        <partial name="_StatusMessage" model="@Model.StatusMessage" />
    </div>
</div>
